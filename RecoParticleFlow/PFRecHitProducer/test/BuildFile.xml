<!-- host-only plugins -->
<library file="*.cc" name="RecoParticleFlowPFRecHitProducerTest">
  <use name="alpaka"/>
  <use name="fmt"/>
  <use name="DataFormats/PortableTestObjects"/>
  <use name="FWCore/Framework"/>
  <use name="FWCore/MessageLogger"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/Utilities"/>
  <use name="RecoParticleFlow/PFRecHitProducer"/>
  <flags EDM_PLUGIN="1"/>
</library>

<!-- alpaka-based portable plugins -->
<library file="alpaka/*.cc" name="RecoParticleFlowPFRecHitProducerTestPortable">
  <use name="alpaka"/>

  <!--
  The dependency on "DataFormats/PortableTestObjects" automatically expands to include
  the host-only library (if it exists) and the corresponding Alpaka libraries (if they exist)
  -->

  <use name="DataFormats/PortableTestObjects"/>

  <use name="FWCore/Framework"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/Utilities"/>
  <use name="HeterogeneousCore/AlpakaCore"/>
  <use name="HeterogeneousCore/AlpakaInterface"/>
  <use name="RecoParticleFlow/PFRecHitProducer"/>
  <flags ALPAKA_BACKENDS="1"/>
  <flags EDM_PLUGIN="1"/>
</library>
